# ============================================================================
# Basic Configuration (Required)
# ============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini

# Logging Configuration
LOG_LEVEL=INFO

# ============================================================================
# DynHyperRAG Configuration (Optional)
# ============================================================================

# ----------------------------------------------------------------------------
# Quality Assessment Module
# ----------------------------------------------------------------------------
# Enable quality assessment for hyperedges
DYNHYPERRAG_QUALITY_ENABLED=true

# Quality feature weights (must sum to 1.0)
QUALITY_WEIGHT_DEGREE=0.2        # Degree centrality weight
QUALITY_WEIGHT_BETWEENNESS=0.15  # Edge betweenness weight
QUALITY_WEIGHT_CLUSTERING=0.15   # Local clustering coefficient weight
QUALITY_WEIGHT_COHERENCE=0.3     # Hyperedge coherence weight
QUALITY_WEIGHT_TEXT=0.2          # Text quality weight

# Quality assessment mode: unsupervised or supervised
QUALITY_MODE=unsupervised

# ----------------------------------------------------------------------------
# Dynamic Weight Update Module
# ----------------------------------------------------------------------------
# Enable dynamic weight updates based on feedback
DYNHYPERRAG_DYNAMIC_ENABLED=true

# Update strategy: ema (exponential moving average), additive, or multiplicative
DYNAMIC_UPDATE_STRATEGY=ema

# Learning rate for weight updates (0 < alpha <= 1)
DYNAMIC_UPDATE_ALPHA=0.1

# Decay factor to prevent unbounded growth (0 < decay <= 1)
DYNAMIC_DECAY_FACTOR=0.99

# Feedback extraction method: embedding, citation, or attention
DYNAMIC_FEEDBACK_METHOD=embedding

# Feedback threshold for positive signals (0-1)
DYNAMIC_FEEDBACK_THRESHOLD=0.7

# ----------------------------------------------------------------------------
# Hyperedge Refinement Module
# ----------------------------------------------------------------------------
# Enable hyperedge filtering/refinement
DYNHYPERRAG_REFINER_ENABLED=false

# Quality threshold for filtering (0-1)
REFINER_QUALITY_THRESHOLD=0.5

# Use soft filtering (lower weight) instead of hard deletion
REFINER_SOFT_FILTER=true

# ----------------------------------------------------------------------------
# Efficient Retrieval Module
# ----------------------------------------------------------------------------
# Enable entity type filtering for efficient retrieval
DYNHYPERRAG_ENTITY_FILTER_ENABLED=true

# Domain for entity taxonomy: medical, legal, or academic
RETRIEVAL_DOMAIN=medical

# Custom entity types (comma-separated, overrides default taxonomy)
# ENTITY_TYPES_MEDICAL=disease,symptom,treatment,medication,procedure,anatomy
# ENTITY_TYPES_LEGAL=law,article,court,party,crime,penalty
# ENTITY_TYPES_ACADEMIC=paper,author,institution,keyword,conference

# Retrieval ranking weights (must sum to 1.0)
RETRIEVAL_SIMILARITY_WEIGHT=0.5  # Semantic similarity weight
RETRIEVAL_QUALITY_WEIGHT=0.3     # Quality score weight
RETRIEVAL_DYNAMIC_WEIGHT=0.2     # Dynamic weight

# ----------------------------------------------------------------------------
# Lite Mode (for resource-constrained environments)
# ----------------------------------------------------------------------------
# Enable lightweight variant with simplified features
DYNHYPERRAG_LITE_MODE=false

# Cache size for frequently accessed hyperedges
LITE_CACHE_SIZE=1000
